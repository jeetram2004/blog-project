
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    
    <title>Blog</title>
</head>
<body>
    
    <%- include('./partials/nav') %> 
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="coverImage" width="600">
        <div>
            <pre><%= blog.body %></pre>
        </div>
        
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" width="100" alt="profile image"> <%= blog.createdBy.fullName %>
    </div>

    <% if (locals.user) {%>
        <div class="container mt-3 mb-4">
        <h1>comments...</h1>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <label for="comment"></label>
              <input type="text" class="form-control" id="comment" placeholder="Enter your comment" name="content">
              <button class="btn btn-sm btn-primary" type="submit">Add</button>
        </form>
        </div>
    <%} %>

    <%- include('./partials/scripts') %>
</body>
</html>











